.menu {
  &--color-white {
    color: #fff;
  }
}

.menu__list {
  display: flex;
  justify-content: space-around;
}

.menu__item {
  margin-right: 60px;

  &:last-child {
    margin-right: 0;
  }
}

.menu__link {
  text-decoration: none;
  white-space: nowrap;

  &:hover {
    font-weight: 600;
    /* text-shadow: 0 0 1px black, 0 0 1px black; //bolder */
  }
}
